<h2>Thêm sản phẩm</h2>
<form method="POST" action="/products/store">
  <div class="form-group">
    <label for="title">title</label>
    <input type="text" class="form-control" id="title" name="title">
  </div>
  <div class="form-group">
    <label for="price">price</label>
    <input type="text" class="form-control" id="price" name="price">
  </div>
  <div class="form-group">
    <label for="image01">image01</label>
    <input type="text" class="form-control" id="image01" name="image01">
  </div>
  <div class="form-group">
    <label for="image02">image02</label>
    <input type="text" class="form-control" id="image02" name="image02">
  </div>
  <div class="form-group">
    <label for="categorySlug">categorySlug</label>
    <input type="text" class="form-control" id="categorySlug" name="categorySlug">
  </div>
  <div class="form-group">
    <label for="description">description</label>
    <textarea class="form-control" id="description" name="description">
  </div>
  <button type="submit" class="btn btn-primary">Create</button>
</form>